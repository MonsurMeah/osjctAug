<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Features_Menu">

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:text="Asset Inventory" />

    <Button
        android:id="@+id/btn_reporting"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Asset Queries" />

    <Button
        android:id="@+id/btn_problem"
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Problem Request" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Equipment Disposal and Collection" />

</LinearLayout>